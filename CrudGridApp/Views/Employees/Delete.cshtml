@model CrudGridApp.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-4">
    <h2>Delete Employee</h2>
    <hr />
    <div class="alert alert-warning">
        <strong>Are you sure you want to delete this employee?</strong>
    </div>
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Position)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Position)</dd>
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Quantity)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Quantity)</dd>
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Rate)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Rate)</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>